<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_operation"
            style="@style/style_common_bottom_text_view"
            android:text="@string/str_clear"
            android:textColor="@color/colorPrimary"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:background="@drawable/selector_bottom_text_common"/>

        <TextView
            android:id="@+id/tv_title"
            style="@style/style_common_text"
            android:text="@string/str_selected_file_info_detail"
            android:padding="8dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_selected_file_info"
        android:layout_below="@+id/rl_top"
        android:divider="@null"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</RelativeLayout>